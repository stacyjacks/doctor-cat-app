<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleText">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubheaderText">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/black</item>                   <!--header background-->
        <item name="android:colorControlActivated">@color/colorAccent</item> <!--selected day-->
    </style>

</resources>